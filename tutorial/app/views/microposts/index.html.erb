<h1>いいねサンプル</h1>
<hr>
<h2>投稿一覧</h2>
<% @microposts.each do |micropost| %>
<a href="/users/<%= micropost.user.id %>"><%= micropost.user.email %></a>
<p><a href="/microposts/<%= micropost.id %>"><%= micropost.content %></a></p>
<h3>いいね件数: <%= micropost.likes.count %></h3>
<% if current_user.already_liked?(micropost) %>
<%= button_to 'いいねを取り消す', micropost_like_path(micropost,id: current_user.id),method: :delete %>
<% else %>
<%= button_to 'いいね', micropost_likes_path(micropost) %>
<% end %>
<% end %>