<section id="ranking">
    <div class="content">
        <div class="page-title">
            <h1>ランキング</h1>
        </div>
        <ul>
            <% @all_ranks.each.with_index(1) do |micropost,i|%>
            <li id="ranking-<%= i %>">
                <div class="li-content">
                    <% if i <= 3 %>
                    <h2><i class="fas fa-crown"></i></h2>
                    <% else %>
                    <h2 class="rank"><%= i %></h2>
                    <%end%>
                    <h2 class="title">
                        this is title
                    </h2>
                    <h2 class="originator"><%= micropost.user.name %></h2>
                    <p><%= micropost.content %></p>
                </div>
            </li>
            <%end%>
        </ul>
    </div>
</section>