<body>
  <section class="login">
    <div>
      <ul>
        <li class="app-visual-login">
          <div>
            <h3>動画ネタの掲示板 <span class="brand-name">YouIdea</span></h3>
            <%= image_tag "signup" %>
            <h3>あなたの動画ネタをクリエイターに届けよう</h3>
            <h3>リスナーとの新たな繋がり <span class="brand-name">YouIdea</span></h3>
          </div>
        </li>
        <li class="login-form">
          <div class="wrapper">
            <h1 class="brand-name">YouIdea</h1>
            <%flash.each do |message_type,message|%>
            <%= content_tag(:div,message,class: "alert alert-#{message_type}")%>
            <%end%>
            <div class="tab-wrap">
              <input id="TAB-01" type="radio" name="TAB" class="tab-switch" checked="checked" />
              <label class="tab-label" for="TAB-01">Log in</label>
              <div class="tab-content">
                <%= render  "new_login" %>
              </div>
              <input id="TAB-02" type="radio" name="TAB" class="tab-switch" />
              <label class="tab-label" for="TAB-02">Sign up</label>
              <div class="tab-content">
                <%= render  "new_signup" %>
              </div>
            </div>
            <div class="guest_login">
            <%= render  "guest_login" %>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </section>
</body>